{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "A simple Notes app with CURD operation",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm:electron-dev\"",
    "electron-dev": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "start": "npm run build && electron ."
  },
  "forge": {
    "config": "./forge.config.mjs"
  },
  "author": "Pavan",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.0",
    "electron": "^31.0.0",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "dotenv": "^17.2.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
